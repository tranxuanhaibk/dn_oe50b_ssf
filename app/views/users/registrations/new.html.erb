<% provide :title, t(".title") %>
<div class="col-6">
  <h1 class="text-center text-primary"><%= t ".title" %></h1>

  <%= form_for(resource, as: resource_name, url: user_registration_path) do |f| %>
    <%= render "users/shared/error_messages", resource: resource %>

    <div class="field mt-3">
      <%= f.label :email, t(".email") %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <div class="field mt-3">
      <%= f.label :name, t(".name") %><br />
      <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
    </div>

    <div class="field mt-3">
      <%= f.label :phone, t(".phone") %><br />
      <%= f.text_field :phone, autofocus: true, autocomplete: "phone" %>
    </div>

    <div class="field mt-3">
      <%= f.label :password, t(".password") %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> <%= t("text.minimum_password")%>)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password" %>
    </div>

    <div class="field mt-3">
      <%= f.label :password_confirmation, t(".password_confirmation") %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>

    <div class="actions mt-3">
      <%= f.submit t(".create_account"), class: "btn btn-success" %>
    </div>
  <% end %>
  <%= render "users/shared/links" %>

</div>
<%= render "users/shared/logo"%>
