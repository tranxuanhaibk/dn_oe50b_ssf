<% provide :title, t("sessions.title") %>
<% provide :base_title, t("base.title") %>
<div class="col-lg-9">
 <div class="container">
  <div class="row">
   <div class="col-md-6 col-md-offset-4">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h2><%= t "sessions.h1" %></h2>
      </div>
      <div class="panel-body">
        <%= form_for(:session, url: login_path) do |f| %>
          <fieldset>
           <div class="form-group">
            <%= f.label :password, t("users.form.email")%>
            <%= f.email_field :email, class: "form-control", placeholder: t("sessions.email") %>
           </div>
           <div class="form-group">
            <%= link_to t("form.session.forgot_password"), new_password_reset_path %>
            <%= f.label :password, t("users.form.password")%>
            <%= f.password_field :password, class: "form-control", placeholder: t("sessions.password") %>
           </div>
           <div class="checkbox">
            <label>
             <%= f.label :remember_me, class: "checkbox inline" do %>
             <%= f.check_box :remember_me %>
             <%= raw t "sessions.remember" %>
             <% end %>
            </label>
           </div>
           <%= f.submit t("sessions.login"), class: "btn btn-lg btn-success btn-block" %>
           <p> <%= t "sessions.new_user" %> <%= link_to t("sessions.signup"), signup_path %></p>
          </fieldset>
        <% end %>
        <hr/>
        <center><h4><% t "session.or" %></h4></center>
        <p><%= link_to fa_icon("facebook", text: t("sessions.facebook")), "#", class: "btn btn-primary" %>
        </p><%= link_to fa_icon("google", text: t("sessions.google")), "#",class: "btn btn-danger" %><p></p>
      </div>
    </div>
   </div>
  </div>
 </div>
</div>

